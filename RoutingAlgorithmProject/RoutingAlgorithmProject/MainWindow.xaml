<Window x:Class="RoutingAlgorithmProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoutingAlgorithmProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    
    <StackPanel>
        <TextBlock Text="Welcome to our Routing Application" HorizontalAlignment="Center" FontSize="22"/>
        <Button Content="Find Route Using A*"  Command="{Binding FindRouteAStarCommand}" />
        <Button Content="Find Route Using Dijikstras" Command="{Binding FindRouteDijikstraCommand}"/>
    </StackPanel>
</Window>
